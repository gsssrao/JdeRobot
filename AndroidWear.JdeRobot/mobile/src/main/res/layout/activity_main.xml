<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin" android:background="@drawable/logo"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:textSize="30sp" android:id="@+id/title"
        android:gravity="center"/>
    <TextView android:text="@string/Instructions" android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content" android:textSize="30sp"
        android:gravity="center"/>

</LinearLayout>
