<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    android:background="@drawable/pioneer"
    tools:context=".MainActivity" tools:deviceIds="wear_square"
    android:weightSum="1">

    <TextView android:id="@+id/text" android:layout_width="match_parent" android:textSize="20sp"
        android:textColor="@color/blue" android:gravity="center"
        android:layout_height="wrap_content" android:text="@string/page1_title"
        android:layout_marginTop="10dp" />
    <Spinner
        android:id="@+id/spinner_page1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_gravity="right"
        android:layout_weight="0.52" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_gravity="right"
        android:layout_weight="0.52" />
</LinearLayout>
