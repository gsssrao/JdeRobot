    android:layout_height="match_parent" tools:context=".MainActivity" tools:deviceIds="wear_round"
    android:background="@drawable/pioneer">

    <TextView android:id="@+id/text" android:layout_width="match_parent" android:textSize="30sp"
        android:textColor="@color/blue"
        android:layout_height="wrap_content" android:text="@string/page1_title"
        android:gravity="center"
        android:layout_alignParentStart="true"
         />
    <Spinner
